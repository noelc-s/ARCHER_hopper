    <worldbody>
        <!--        <geom name="plane" type="plane"  material='plane' size="10 5 0.1" rgba=".9 .9 .9 1"/>-->

        <camera mode="fixed"/>
        <body name="torso" pos="0 0 1">
            <!--light diffuse=".1 .1 .1" pos="0 0 5" dir="0 0 -1" mode="trackcom" cutoff="90"/-->
            <site name="torso_IMU" type="sphere" size=".03" pos="0 0 0"
                  rgba=".9 0 0 1"/>
            <!--            <geom type="cylinder" size=".05 .05" rgba=".9 .9 .9 1" />-->
<!--            <geom name="torso_stl" type='mesh' mesh='torso' contype="0"-->
<!--                  conaffinity="0" rgba="0.18 0.18 0.18 0.8"-->
<!--                  pos="-0.055     0.183     -0.26" xyaxes="1 -0.55 0 0 0 1"/>-->
            <inertial pos=" 0.0 0.0 0" mass="4.55"
                      diaginertia="0.04131 0.04093 0.02210"/>
            <freejoint name="root"/>

            <body name="wheel1" pos="0.0776 0 0.0547" zaxis="0.0776 0 0.0547">
                <!--                <geom type="cylinder" size=".05 .01" rgba="0 0 0 0"/>-->
<!--                <geom name="wheel1_stl" type='mesh' mesh='wheel' contype="0"-->
<!--                      conaffinity="0" pos="-0.065     -0.065     -0.013  "-->
<!--                      rgba="0.937 .39 0 1"/>-->
                <inertial pos=" 0 0 0" mass="0.32"
                          diaginertia="0.00056 0.00056 0.00111"/>
                <joint name="joint_wheel1" type="hinge" pos="0 0 0"
                       axis="0 0 1" damping="0.0005"/>
            </body>

            <body name="wheel2" pos="-0.0388 0.0672 0.0548"
                  zaxis="-0.0388 0.0672 0.0548">
                <!--                <geom type="cylinder" size=".05 .01" rgba="0 0 0 0"/>-->
<!--                <geom name="wheel2_stl" type='mesh' mesh='wheel' contype="0"-->
<!--                      conaffinity="0" pos="-0.065     -0.065     -0.013"-->
<!--                      rgba="0.937 .39 0 1"/>-->
                <inertial pos=" 0 0 0" mass="0.32"
                          diaginertia="0.00056 0.00056 0.00111"/>
                <joint name="joint_wheel2" type="hinge" pos="0 0 0"
                       axis="0 0 1" damping="0.0005"/>
            </body>

            <body name="wheel3" pos="-0.0388 -0.0672 0.0548"
                  zaxis="-0.0388 -0.0672 0.0548">
                <!--                <geom type="cylinder" size=".05 .01" rgba="0 0 0 0"/>-->
<!--                <geom name="wheel3_stl" type='mesh' mesh='wheel' contype="0"-->
<!--                      conaffinity="0" pos="-0.065     -0.065     -0.013 "-->
<!--                      rgba="0.937 .39 0 1"/>-->
                <inertial pos=" 0 0 0" mass="0.32"
                          diaginertia="0.00056 0.00056 0.00111"/>
                <joint name="joint_wheel3" type="hinge" pos="0 0 0"
                       axis="0 0 1" damping="0.0005"/>
            </body>

            <body name="foot" pos="0 0 -0.36">
                <!--                <geom type="sphere" size="0.02" rgba=".9 .9 0 0"/>-->
<!--                <geom name="foot_stl" type='mesh' mesh='foot' contype="0"-->
<!--                      conaffinity="0" rgba=".9 .9 .9 1"-->
<!--                      pos="-0.023     0.05     -0.013" xyaxes="1 -0.5 0 0 0 1"/>-->
                <inertial pos=" 0 0 0" mass="0.4"
                          diaginertia="0.00165 0.00161 0.00032"/>
                <joint name="knee" type="slide" pos="0 0 0.25" axis="0 0 1"
                       limited="true" range="0.0 0.1"
                       solimplimit="0.99 0.999 0.001 0.5 2"
                       solreflimit=" 0.002 1"/>
            </body>

            <!-- This is to check quat_act-->
            <!--body name="quat_act" pos="0 0 0" quat="0.8806    0.3646   -0.2795    0.1160">
            <geom type="box" size=".1 .1 .1" rgba=".9 .9 0 1"/>
          </body-->

        </body>
    </worldbody>
    <actuator>
        <position name="position_actuator" joint="knee" kp="11732"
                  forcelimited="true" forcerange="-250 0"/>
        <motor name="wheel1_actuator" joint="joint_wheel1" ctrlrange="-1.6 1.6"
               ctrllimited="true"/>
        <motor name="wheel2_actuator" joint="joint_wheel2" ctrlrange="-1.6 1.6"
               ctrllimited="true"/>
        <motor name="wheel3_actuator" joint="joint_wheel3" ctrlrange="-1.6 1.6"
               ctrllimited="true"/>
    </actuator>
</mujoco>
