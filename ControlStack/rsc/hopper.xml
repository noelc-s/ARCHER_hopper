<mujoco model="3D_hopper">
    <compiler angle='radian' eulerseq='xyz' meshdir='STLs' discardvisual = "false"/>

    <visual>
        <headlight ambient="0.5 0.5 0.5"/>
    </visual>


    <option timestep="0.001" integrator="RK4" gravity="0 0 -9.81" o_solimp = "0.99 0.999 0.001 0.5 2" o_solref = "0.002 1"/>

    <asset>
